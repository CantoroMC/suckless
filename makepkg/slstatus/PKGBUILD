# Maintainer: Marco Cantoro <marco dot cantoro92 at outlook dot it>

_pkgbase=suckless
pkgname=slstatus-git
pkgver=1.0
pkgrel=1
pkgdesc="Status monitor for window managers that use WM_NAME or stdin to fill the status bar"
arch=('x86_64')
url="https://tools.suckless.org/slstatus"
license=('custom:ISC')
depends=(
  'libxau'
  'libxcb'
  'libxdmcp'
)
makedepends=('git')
provides=("${pkgname%-git}")
conflicts=("${pkgname%-git}")
source=('git+https://github.com/CantoroMC/suckless')
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$_pkgbase"
  printf "1.0.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "$srcdir/$_pkgbase/${pkgname%-git}"
  make
}

package() {
  local licdir="$pkgdir/usr/share/licenses/${pkgname%-git}"
  local docdir="$pkgdir/usr/share/doc/${pkgname%-git}"

  cd "$srcdir/$_pkgbase/${pkgname%-git}"
  make PREFIX=/usr DESTDIR="$pkgdir" install

  install -Dm0644 --target-directory "$licdir" "$srcdir/$_pkgbase/${pkgname%-git}/LICENSE"
  install -Dm0644 --target-directory "$docdir" "$srcdir/$_pkgbase/${pkgname%-git}/README.md"
}
