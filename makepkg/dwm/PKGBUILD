# Maintainer: Marco Cantoro <marco dot cantoro92 at outlook dot it>

_pkgbase=suckless
pkgname=dwm-git
pkgver=6.2
pkgrel=1
pkgdesc="Dynamic window manager for X"
arch=('x86_64')
url="https://dwm.suckless.org"
license=('MIT')
depends=(
  'dmenu'
  'expat'
  'fontconfig'
  'freetype2'
  'glib2'
  'graphite'
  'harfbuzz'
  'libpng'
  'libx11'
  'libxau'
  'libxcb'
  'libxdmcp'
  'libxext'
  'libxft'
  'libxinerama'
  'libxrender'
  'pcre'
  'st'
  'zlib'
)
makedepends=('git')
provides=("${pkgname%-git}")
conflicts=("${pkgname%-git}")
source=('git+https://github.com/CantoroMC/suckless')
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$_pkgbase"
  printf "6.2.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "$srcdir/$_pkgbase/${pkgname%-git}"
  make
}

package() {
  local licdir="$pkgdir/usr/share/licenses/${pkgname%-git}"
  local docdir="$pkgdir/usr/share/doc/${pkgname%-git}"

  cd "$srcdir/$_pkgbase/${pkgname%-git}"
  make PREFIX=/usr DESTDIR="$pkgdir" install

  install -Dm0644 --target-directory "$licdir" "$srcdir/$_pkgbase/${pkgname%-git}/LICENSE"
  install -Dm0644 --target-directory "$docdir" "$srcdir/$_pkgbase/${pkgname%-git}/README.org"
}
